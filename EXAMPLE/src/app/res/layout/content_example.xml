<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.igottadroid.CarCompanion.ExampleActivity"
    tools:showIn="@layout/activity_example">

    <com.igottadroid.CarCompanion.AnimatedTextSwitch
        android:id="@+id/ats_example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:on_icon="@drawable/ic_queue_vector"
        app:off_icon="@drawable/ic_queue_vector"
        app:off_color="#747474"
        app:on_color="#53af2b"
        app:textOrientaion="start"
        app:text="Toggle Floating Action Button"
        app:textImage="@mipmap/ic_queue"
        />

</android.support.constraint.ConstraintLayout>
